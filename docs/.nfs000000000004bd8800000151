# Run the following shell commands to setup your environment.
conda create -n dl-hps python=3.6
conda activate dl-hps
conda install h5py
conda install scikit-learn
conda instal mpi4py
conda install -c conda-forge keras
git clone https://github.com/scikit-optimize/scikit-optimize.git
cd scikit-optimize
pip install -e .
conda install cython
conda install -c conda-forge xgboost

# I added a setup.py file to deephyper so I could pip install it.
mkdir deephyper
cd deephyper
git clone https://xgitlab.cels.anl.gov/pbalapra/deephyper.git
printf "from distutils.core import setup\nsetup(name="deephyper", version="0.1dev", packages=["deephyper",], license="NONE",long_description="A package for hyperparameter optimization on deep neural nets")" >> setup.py
pip install -e .

